<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#3FD5E3"
                android:endColor="#BBEAE8"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#3FD5E3" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#8EF7F3"
                android:endColor="#3FD5E3"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#307F87" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
