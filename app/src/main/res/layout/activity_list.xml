<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/empty">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPersonas"
        android:layout_width="400dp"
        android:layout_height="562dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.983">


    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="308dp"
        android:layout_height="21dp"
        android:rotation="180"
        android:text="_______________________________________________"
        android:textColor="#9EBAE3"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#353A55"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btn_menu_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/btn_lupa_slct" />

        <ImageButton
            android:id="@+id/btn_menu_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/btn_home" />

        <ImageButton
            android:id="@+id/btn_menu_game"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/btn_game" />

        <ImageButton
            android:id="@+id/btn_menu_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/btn_settings" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="59dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.000">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username   "
            android:textColor="#9BBBEC"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_sort_name"
            android:layout_width="41dp"
            android:layout_height="47dp"
            android:rotation="90"
            android:background="@drawable/button_grey"
            app:backgroundTint="@null"
            android:text=">"
            android:textColor="#9BBBEC"
            android:textSize="20dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="account   "
            android:textColor="#9BBBEC"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_sort"
            android:layout_width="41dp"
            android:layout_height="47dp"
            android:rotation="90"
            android:text=">"
            android:background="@drawable/button_grey"
            app:backgroundTint="@null"
            android:textColor="#9BBBEC"
            android:textSize="20dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>